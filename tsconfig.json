{
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./node_modules",
    "./build"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "build",
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "types": [
      "@adonisjs/core"
    ]
  }
}

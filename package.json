{
  "name": "adonisjs-scheduler",
  "version": "2.6.0",
  "description": "Task scheduler for AdonisJS",
  "homepage": "https://github.com/KABBOUCHI/adonisjs-scheduler#readme",
  "license": "MIT",
  "keywords": [
    "adonisjs",
    "scheduler",
    "crons"
  ],
  "type": "module",
  "author": "Georges KABBOUCHI <georges.kabbouchi@gmail.com>",
  "main": "build/providers/scheduler_provider.js",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "npm run clean && npm run build-only && npm run copyfiles",
    "copyfiles": "copyfiles \"stubs/**/*.stub\" build",
    "build-only": "tsc && npm run index:commands",
    "clean": "rimraf build",
    "prepublishOnly": "npm run build",
    "index:commands": "adonis-kit index build/commands",
    "test": "node --enable-source-maps --import=ts-node-maintained/register/esm bin/test.ts"
  },
  "exports": {
    ".": "./build/index.js",
    "./services/main": "./build/services/main.js",
    "./scheduler_provider": "./build/providers/scheduler_provider.js",
    "./commands": "./build/commands/main.js"
  },
  "devDependencies": {
    "@adonisjs/core": "^6.2.0",
    "@adonisjs/eslint-config": "^1.2.1",
    "@adonisjs/prettier-config": "^1.2.1",
    "@adonisjs/tsconfig": "^1.2.1",
    "@japa/assert": "^4.0.0",
    "@japa/runner": "^3.1.4",
    "@swc/core": "^1.3.102",
    "@types/async-lock": "^1.4.2",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.10.1",
    "@types/node-cron": "^3.0.7",
    "copyfiles": "^2.4.1",
    "eslint": "^8.19.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node-maintained": "^10.9.4",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "tag": "latest",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KABBOUCHI/adonisjs-scheduler.git"
  },
  "bugs": {
    "url": "https://github.com/KABBOUCHI/adonisjs-scheduler/issues"
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "dependencies": {
    "async-lock": "^1.4.1",
    "chokidar": "^4.0.2",
    "cron-parser": "^5.0.4",
    "luxon": "^3.5.0",
    "node-cron": "^3.0.2",
    "string-width": "^7.2.0"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.2.0"
  }
}
